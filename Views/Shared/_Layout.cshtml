
@inject EWallet.BusinessLogic.Implementation.Users.ViewModel.CurrentUserViewModel CurrentUser;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EWallet</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" defer asp-append-version="true"></script>
    <script src="~/js/utils.js" defer asp-append-version="true"></script>
    <script src="~/js/getCurrentBalance.js" defer asp-append-version="true"></script>
   



</head>
<body>
    <div class="wrapper">
        <div class="container-layout">
            <div id="sidebar">


                <div class="menu">
                    <div id="appName"> <a id="appNameLink" asp-controller="Home" asp-action="Index"><img id="logo" src="~/img/71592.png"/>Wallet</a></div>
                    <div id="menuLinks">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                    <a asp-controller="Spending" asp-action="Index">Spendings</a>
                    <a asp-controller="Income" asp-action="Index">Incomes</a>
                    <a asp-controller="PiggyBank" asp-action="Index">PiggyBank</a>              
                    <a asp-controller="Transaction" asp-action="Index">Transaction</a>
                    </div>

                </div>

            </div>

            <div class="main @ViewData["Class"]">
                
                <header>
                    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                        <div class="container">
                           
                                @if (CurrentUser.IsAuthenticated)
                                {

                                <div>
                                    <span id="helloUser">Hello, @CurrentUser.Username!</span>
                                    
                                </div>

                                        <div id="currentBalanceDiv">

                                            <div id="currentBalance">
                                                <div>
                                                    <span id="moneyIcon">
                                                        <i class="bi bi-cash-coin"></i>
                                                    </span>
                                                </div>
                                                <div id="currentBalanceData">
                                                   
                                                </div>
                                            </div>


                                            <div id="currentSavings">
                                                <div>
                                                    <span id="piggyBankIcon">
                                                        <i class="bi bi-piggy-bank-fill"></i>
                                                    </span>
                                                </div>
                                                <div id="savingsContent">
                                                   
                                                </div>
                                            </div>

                                        </div>
                                   
                                       
                                <div id="logOut">
                                    <a asp-controller="User" asp-action="Logout" class="btn logout">Log out</a>
                                </div>

                                }
                                else
                                {
                                    <div>
                                    <a asp-controller="User" asp-action="Register" class="btn btn-primary registerButtons">Register As User</a>
                                    <a asp-controller="User" asp-action="RegisterAdvisor" class="btn btn-primary registerButtons">Register As Advisor</a>
                                    </div>
                                }
                        </div>
                    </nav>
                </header>
                

                <main role="main" class="pb-3">



                    <div id="content">
                        
                        @RenderBody()
                
                    </div>

                </main>
            </div>

        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2023 - EWallet.WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

        @RenderSection("Scripts", required: false)

    </div>
</body>
</html>
